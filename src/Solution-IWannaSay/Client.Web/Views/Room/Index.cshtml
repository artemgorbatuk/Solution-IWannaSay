@{
    ViewData["Title"] = "Room";
}

@model RoomIndexPage;

<div class="app-room">

    <div class="app-panel app-border">

        <div class="app-search">

        </div>

        <div class="app-group">

            @foreach (var group in Model.Groups) {
                @group.Name <br>
            }

        </div>

    </div>

    <div class="app-chat app-border">

        <div class="app-messages">
            @* <partial name="_Messages" for="@Model" /> *@
            @await Html.PartialAsync("_Messages", Model)
        </div>

        <hr class="app-break-line" />

        <div class="app-input-line">
            @* <form method="post" asp-controller="Room" asp-action="SendMessage">
                <textarea name="message" rows="3" autofocus spellcheck="true" placeholder="Введите сообщение"></textarea>
                <button type="submit" id="buttonSend" class="btn btn-info">Отправить</button>
            </form> *@
            <textarea id="message" rows="3" autofocus spellcheck="true" placeholder="Введите сообщение"></textarea>
            <button type="button" id="buttonSend" class="btn btn-default">Отправить</button>
        </div>

    </div>
        
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/room.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/room.js" asp-append-version="true"></script>
}